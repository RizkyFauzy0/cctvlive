# Example Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_NAME=cctvlive
DB_USER=root
DB_PASS=your_password_here

# Application Settings
APP_NAME="Live CCTV Manager"
